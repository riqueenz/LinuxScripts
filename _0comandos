# Copiar arquivo para /usr/bin
sudo cp * /usr/bin

# Ver se o cron estÃ¡ ativo
systemctl status cronie

# Ativar o cron
systemctl enable --now cronie.service

# Rodar crontab -e como root
# Colocar dentro do arquivo crontab
59 03 * * * atualizar_cron


echo "59 03 * * * atualizar_cron" >> crontab_new
echo "45 07 * * * atualizar_cron" >> crontab_new
echo "52 11 * * * atualizar_cron" >> crontab_new
echo "05 18 * * * atualizar_cron" >> crontab_new
echo "47 21 * * * atualizar_cron" >> crontab_new

crontab crontab_new
rm crontab_new


